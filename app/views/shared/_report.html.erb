<% if current_user && FraudReport.already_reported_by?(current_user, suspect) %>
  <%= render "shared/button",
      text: "Already Reported",
      icon: "flag.svg",
      classes: "opacity-75 cursor-not-allowed pointer-events-none",
      title: "You have already reported this #{suspect.class.name.downcase}" %>
<% else %>
  <%= render "shared/button",
      text: "Report",
      icon: "flag.svg",
      data: {
        controller: "modal",
        action: "click->modal#open",
        modal_id: "#{suspect.class.name.downcase}-#{suspect.id}",
        modal_type: "report"
      } %>

<%= render "shared/modal",
    id: "report-modal-#{suspect.class.name.downcase}-#{suspect.id}",
    title: "Report #{suspect.respond_to?(:title) ? suspect.title : suspect.class.name.downcase}?" do %>
  <%= form_with model: FraudReport.new, url: fraud_reports_path, method: :post, local: true do |form| %>
    <%= form.hidden_field :suspect_type, value: suspect.class.name %>
    <%= form.hidden_field :suspect_id, value: suspect.id %>

    <div class="mb-4">
      <p class="text-md mb-3">We want good, high quality projects on Summer of Making. If you believe this <%= suspect.class.name.downcase %> does not follow that mission, please let us know why:</p>

      <div class="space-y-2 mb-4">
        <label class="flex items-center space-x-3 cursor-pointer">
          <input type="radio" name="report_kind" value="low_quality" class="radio radio-sm" checked>
          <span class="text-sm">Low-quality <%= suspect.class.name.downcase == "ShipEvent" ? "ship" : "project" %></span>
        </label>
        <label class="flex items-center space-x-3 cursor-pointer">
          <input type="radio" name="report_kind" value="ai_undeclared" class="radio radio-sm">
          <span class="text-sm">Uses AI but it's undeclared</span>
        </label>
        <label class="flex items-center space-x-3 cursor-pointer">
          <input type="radio" name="report_kind" value="demo_does_not_work" class="radio radio-sm">
          <span class="text-sm">Demo does not work</span>
        </label>
        <label class="flex items-center space-x-3 cursor-pointer">
          <input type="radio" name="report_kind" value="other" class="radio radio-sm">
          <span class="text-sm">Other</span>
        </label>
      </div>

      <div class="mb-2">
        <%= form.text_area :reason,
            placeholder: "Share a short explanation (20+ characters).",
            class: "som-horizontal-input w-full rounded-lg resize-none focus:ring-2 focus:ring-nice-blue focus:border-nice-blue transition-colors",
            rows: 4 %>
        <p class="text-xs text-gray-500 mt-1">Why are you reporting this <%= suspect.class.name.downcase %>? (20+ characters)</p>
      </div>
    </div>

    <div class="flex justify-end space-x-3 mt-6">
      <button type="button" class="som-button-primary" data-action="click->modal#close">
        Cancel
      </button>
      <%= form.submit "Submit", class: "som-button-primary" %>
    </div>
  <% end %>
<% end %>
<% end %>
